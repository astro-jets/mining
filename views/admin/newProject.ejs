<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row">
      <div class="col-12 d-flex no-block align-items-center">
        <h4 class="page-title">Add New Project</h4>
        <div class="ms-auto text-end">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Projects
              </li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->

  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <div class="col-md-12">
      <div class="card">
        <form id="projects-form" class="form form-horizontal" method="POST">
          <div class="card-body">
            <h4 class="card-title">Project Info</h4>
            <div class="row" style="justify-content: space-between">
              <div class="col-9">
                <div class="form-group row">
                  <label for="site-name">Name:</label>
                  <input type="text" id="name" name="name" required />
                </div>
              </div>
            </div>

            <div class="form-group row">
              <label for="description">Description:</label>
              <textarea
                id="description"
                name="description"
                class="col-9"
                required
              ></textarea>
            </div>
          </div>
          <div class="border-top">
            <div class="card-body">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  const form = document.getElementById("projects-form");
  form.addEventListener("submit", async (event) => {
    event.preventDefault();

    const formData = {
      name: form.name.value,
      description: form.description.value,
    };
    console.log(formData);
    const response = await fetch("/admin/projects/new", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(formData),
    });

    if (response.ok) {
      // Display a success message to the user
      alert("Project saved successfully");
      form.reset();
    } else {
      console.log(response.error);
      // Display an error message to the user
      alert(response.error);
    }
  });
</script>
